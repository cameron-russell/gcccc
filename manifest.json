{
  "name": "GitHub Contribution Chart Colour Changer",
  "description": "Change the colour of your contribution chart on GitHub!",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "./icons/16.png",
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_action": {
    "default_popup": "./popup.html"
  },
  "permissions": ["tabs", "*://github.com/*"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["content-script.js"]
    }
  ]
}
